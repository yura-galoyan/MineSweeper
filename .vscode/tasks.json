{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "Menu/menu.cpp",
                "Menu/MenuController/*.cpp",
                "Library/Colors/Colors.cpp",
                "Library/draw.cpp",
                "-lncurses",
                "Menu/subMenu/options/options.cpp",
                "Game/Board/*.cpp",
                "Game/Controller/controller.cpp",
                "Game/Cursor/cursor.cpp",
                "Game/Gameloop/gameloop.cpp",

            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}